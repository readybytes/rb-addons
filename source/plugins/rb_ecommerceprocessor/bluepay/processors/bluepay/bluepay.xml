<?xml version="1.0" encoding="utf-8"?>
<config>
	<name>BLUEPAY</name>
	<help>
    	<![CDATA[
		<b>Test Outcomes:</b><br/>

			To test both possible outcomes (i.e. Approved, Declined), the transaction status responses are based on the values you assign to the AMOUNT field when you are in TEST Mode:
			<br/><br/>
			Odd dollar amounts (e.g. $1.00, $9.00, $25.00) return an APPROVED message<br/>
			Even dollar amounts (e.g. $2.00, $16.00, $32.15) return a DECLINE message
		]]>
   	 </help>

	<fields name="processor_config">
		<fieldset name="parameters">
			<field	name="account_id" 	
					default=""
					type="text"
					size="50"
					label="PLG_RB_ECOMMERCEPROCESSOR_BLUEPAY_PARAMS_ACCOUNT_ID_LABEL"
					description="PLG_RB_ECOMMERCEPROCESSOR_BLUEPAY_PARAMS_ACCOUNT_ID_DESC"/>
				
			<field	name="secret_key" 	
					default="" 		
					type="text"
					size="50"			 
					label="PLG_RB_ECOMMERCEPROCESSOR_BLUEPAY_PARAMS_SECRET_KEY_LABEL"  
					description="PLG_RB_ECOMMERCEPROCESSOR_BLUEPAY_PARAMS_SECRET_KEY_DESC"/>
			  		
	        <field  name="sandbox" 
	     			type="radio" 
	     			default="1" 
	     			label="PLG_RB_ECOMMERCEPROCESSOR_BLUEPAY_PARAMS_SANDBOX_LABEL" 
	     			description="PLG_RB_ECOMMERCEPROCESSOR_BLUEPAY_PARAMS_SANDBOX_DESC"
	     			class="btn-group">
	         		<option value="0" >JNO</option>
	         		<option value="1">JYES</option>
	         </field>
		</fieldset>
	</fields>
</config>