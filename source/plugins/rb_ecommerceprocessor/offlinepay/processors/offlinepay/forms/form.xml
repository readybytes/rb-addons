<?xml version="1.0" encoding="UTF-8"?>
<form>
<fields name="payment_data">
	<fieldset addfieldpath="/plugins/system/rbsl/rb/rb/html/fields" name="plg_rb_ecommerceprocessor_offline_form">
		<field	name="from"
				type="list" 
				id="rb_ecommerce_processor_offlinepay_from"
				default="cash" 
				label="PLG_RB_ECOMMERCEPROCESSOR_OFFLINE_FORM_OFFLINE_PAYMENT_MODE_LABEL" 
				description="PLG_RB_ECOMMERCEPROCESSOR_OFFLINE_FORM_OFFLINE_PAYMENT_MODE_DESC" >
				<option value="cash" >PLG_RB_ECOMMERCEPROCESSOR_OFFLINE_FORM_OFFLINE_PAYMENT_MODE_CASH</option>
				<option value="cheque">PLG_RB_ECOMMERCEPROCESSOR_OFFLINE_FORM_OFFLINE_PAYMENT_MODE_CHEQUE</option>
				<option value="dd">PLG_RB_ECOMMERCEPROCESSOR_OFFLINE_FORM_OFFLINE_PAYMENT_MODE_DEMAND_DRAFT</option>
		</field>
			
		<field	name="id"
				type="text" 
				id="rb_ecommerce_processor_offlinepay_id"
				default="" 
				label="PLG_RB_ECOMMERCEPROCESSOR_OFFLINE_FORM_DD_OR_CHEQUE_NUMBER_LABEL" 
				description="PLG_RB_ECOMMERCEPROCESSOR_OFFLINE_FORM_DD_OR_CHEQUE_NUMBER_DESC" />
				
				
		<field	name="bank_name"
				type="text" 
				id="rb_ecommerce_processor_offlinepay_bankname"
				default="" 
				label="PLG_RB_ECOMMERCEPROCESSOR_OFFLINE_FORM_BANK_NAME_LABEL" 
				description="PLG_RB_ECOMMERCEPROCESSOR_OFFLINE_FORM_BANK_NAME_DESC"
				class="readonly" />
				
		<field	name="account_number"
				type="text" 
				id="rb_ecommerce_processor_offlinepay_account_number"
				default="" 
				label="PLG_RB_ECOMMERCEPROCESSOR_OFFLINE_ACCOUNT_NUMBER_LABEL" 
				description="PLG_RB_ECOMMERCEPROCESSOR_OFFLINE_ACCOUNT_NUMBER_DESC"
				class="readonly" />
				
		<field 	name="invoice_number"
			  	type="hidden"
			  	id="rb_ecommerce_processor_offlinepay_invoice_number"
			  	default="" />
			  	
		<field	name="amount"
				type="hidden"
				id="rb_ecommerce_processor_offlinepay_amount"
				default="0" />
				
							
	</fieldset>
</fields>
</form>