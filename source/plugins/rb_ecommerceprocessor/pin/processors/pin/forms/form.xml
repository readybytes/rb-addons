<?xml version="1.0" encoding="UTF-8"?>
<form>
<fields name="payment_data">
	<fieldset addfieldpath="/plugins/system/rbsl/rb/rb/html/fields" name="plg_rb_ecommerceprocessor_pin_form_pin_fieldset_card_details">
		
		<field 	name="card_number"
				id="rb_ecommerce_processor_pin_card_number"
				type="text"
				default=""
				label="PLG_RB_ECOMMERCEPROCESSOR_PIN_CARD_NUMBER_LABEL"
				description="PLG_RB_ECOMMERCEPROCESSOR_PIN_CARD_NUMBER_DESC"
				required="true"/>
		
		<field 	name="expiration_month" 
				id="rb_ecommerce_processor_pin_expiration_month"
				type="rb_.month"
				default=""
				label="PLG_RB_ECOMMERCEPROCESSOR_PIN_EXPIRATION_MONTH_LABEL"
				description="PLG_RB_ECOMMERCEPROCESSOR_PIN_EXPIRATION_MONTH_DESC"
				required="true"/>
		
		<field 	name="expiration_year" 
				id="rb_ecommerce_processor_pin_expiration_year"
				type="rb_.year"
				from="now"
				for="20"
				default=""
				label="PLG_RB_ECOMMERCEPROCESSOR_PIN_EXPIRATION_YEAR_LABEL"
				description="PLG_RB_ECOMMERCEPROCESSOR_PIN_EXPIRATION_YEAR_DESC"
				required="true"/>				
				
		<field 	name="card_code" 
				id="rb_ecommerce_processor_pin_card_code"
				type="text"
				default=""
				label="PLG_RB_ECOMMERCEPROCESSOR_PIN_CVC_CODE_LABEL"
				description="PLG_RB_ECOMMERCEPROCESSOR_PIN_CVC_CODE_DESC"
				required="true"/>
	</fieldset>
		
	<fieldset addfieldpath="/plugins/system/rbsl/rb/pkg/ecommerce/html/fields" name="plg_rb_ecommerceprocessor_pin_fieldset_customer_details">		
		
		<field 	name="card_name" 
				id="rb_ecommerce_processor_pin_card_name"
				type="text"
				default=""
				label="PLG_RB_ECOMMERCEPROCESSOR_PIN_CARD_NAME_LABEL"
				description="PLG_RB_ECOMMERCEPROCESSOR_PIN_CARD_NAME_DESC"/>

		<field 	name="address" 
				id="rb_ecommerce_processor_pin_address"
				type="textarea"
				default=""
				label="PLG_RB_ECOMMERCEPROCESSOR_PIN_ADDRESS_LABEL"
				description="PLG_RB_ECOMMERCEPROCESSOR_PIN_ADDRESS_DESC"/>
			
		<field 	name="country" 
				id="rb_ecommerce_processor_pin_country"
				type="rb_ecommerce.countries"
				label="PLG_RB_ECOMMERCEPROCESSOR_PIN_COUNTRY_LABEL"
				description="PLG_RB_ECOMMERCEPROCESSOR_PIN_COUNTRY_DESC"/>
		
		<field 	name="state" 
				id="rb_ecommerce_processor_pin_state"
				type="text"
				default=""
				label="PLG_RB_ECOMMERCEPROCESSOR_PIN_STATE_LABEL"
				description="PLG_RB_ECOMMERCEPROCESSOR_PIN_STATE_DESC"/>
					
		<field 	name="city" 
				id="rb_ecommerce_processor_pin_city"
				type="text"
				default=""
				label="PLG_RB_ECOMMERCEPROCESSOR_PIN_CITY_LABEL"
				description="PLG_RB_ECOMMERCEPROCESSOR_PIN_CITY_DESC"/>
		
		<field 	name="zip" 
				id="rb_ecommerce_processor_pin_zip"
				type="text"
				default=""
				label="PLG_RB_ECOMMERCEPROCESSOR_PIN_ZIP_LABEL"
				description="PLG_RB_ECOMMERCEPROCESSOR_PIN_ZIP_DESC"/>						
	</fieldset>
</fields>	
</form>