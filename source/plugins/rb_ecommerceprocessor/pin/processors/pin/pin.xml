	]]>
   	</help>
   	 
	<fields name="processor_config">
		<fieldset name="parameters">
			<field	name="public_key" 	
				default="" 		
				type="text" 	
				size="50" 
				label="PLG_RB_ECOMMERCEPROCESSOR_PIN_PARAMS_PUBLIC_KEY_LABEL"  
				description="PLG_RB_ECOMMERCEPROCESSOR_PIN_PARAMS_PUBLIC_KEY_DESC"
				required="true"
				/> 			
		<field	name="secret_key" 	
				default="" 		
				type="text" 	
				size="50" 
				label="PLG_RB_ECOMMERCEPROCESSOR_PIN_PARAMS_SECRET_KEY"  
				description="PLG_RB_ECOMMERCEPROCESSOR_PIN_PARAMS_SECRET_KEY_DESC"
				/>
				
		<field  name="sandbox" 
        			type="radio" 
        			default="0" 
        			label="PLG_RB_ECOMMERCEPROCESSOR_PIN_PARAMS_SANDBOX_LABEL" 
        			description="PLG_RB_ECOMMERCEPROCESSOR_PIN_PARAMS_SANDBOX_DESC" 
					class="btn-group">
		          	<option value="0">JNO</option>
	         	 	<option value="1">JYES</option>
       	</field>
        
		<field	name="sandbox_secret_key" 	
				default="" 		
				type="text" 	
				size="50" 
				label="PLG_RB_ECOMMERCEPROCESSOR_PIN_PARAMS_SANDBOX_SECRET_KEY"  
				description="PLG_RB_ECOMMERCEPROCESSOR_PIN_PARAMS_SANDBOX_SECRET_KEY_DESC"
				/>		
		</fieldset>
	</fields>
</config>
