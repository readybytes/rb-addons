<?xml version="1.0" encoding="utf-8"?>
<config>
	<name>Payza</name>
   	<author></author>
    <description></description>
   	<icon></icon>
    <tags></tags>
    <help>
    	<![CDATA[
		For test mode - <br>In your Payza account, you need to enable IPN Status, IPN Version 2 and Test Mode in IPN setup.<br/>
		
		<div class="rb-help-payinvoice rb-processor-help">		
			You need to enter Alert URL as <b>http://yoursite.com/index.php?option=com_payinvoice&amp;view=invoice&amp;task=notify&amp;processor=payza</b><br/>
		</div>
		
		<div class="hide rb-help-paycart rb-processor-help">
			You need to enter Alert URL as <b>http://yoursite.com/index.php?option=com_paycart&amp;view=cart&amp;task=notify&amp;processor=payza</b><br/>
		</div>
		 
		If you are using it in Test mode then append string <b>&test=1</b> in the above alert URL.<br/>
		]]>
   	</help>
   	 
	<fields name="processor_config">
		<fieldset name="parameters">
			<field	name="merchant" 	
					type="text" 
					default="" 			
					label="PLG_RB_ECOMMERCEPROCESSOR_PAYZA_PARAMS_PAYZA_MERCHANT_EMAIL_LABEL"
					description="PLG_RB_ECOMMERCEPROCESSOR_PAYZA_PARAMS_PAYZA_MERCHANT_EMAIL_DESC" />								
		  		
   			<field  name="sandbox" 
        			type="radio" 
        			default="0" 
        			label="PLG_RB_ECOMMERCEPROCESSOR_PAYZA_PARAMS_PAYZA_SANDBOX_LABEL" 
        			description="PLG_RB_ECOMMERCEPROCESSOR_PAYZA_PARAMS_PAYZA_SANDBOX_DESC" 
					class="btn-group">
		          	<option value="0">JNO</option>
	         	 	<option value="1">JYES</option>
       		</field>
       		 					
		</fieldset>
	</fields>
</config>
