					description="PLG_RB_ECOMMERCEPROCESSOR_EWAY_PARAMS_EWAY_USERNAME_DESC" />	
					
			<field 	name="password" 
					type="text"
					default=""
					label="PLG_RB_ECOMMERCEPROCESSOR_EWAY_PARAMS_EWAY_PASSWORD_LABEL"
					description="PLG_RB_ECOMMERCEPROCESSOR_EWAY_PARAMS_EWAY_PASSWORD_DESC" />
					
			<field  name="sandbox" 
       				type="radio" 
       				default="0" 
